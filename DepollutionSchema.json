            }
        },
        
        "after_depollution": {
            "datas": {
                "remaining_waste": {
                    "type": "Select",
                    "label": "Quantité restante de déchet",
                    "required": false,
                    "fillable": true,
                    "settings": {
                        "render": "radio",
                        "options": [
                            "Plus de la moitié",
                            "Beaucoup",
                            "Peu",
                            "Presque rien"
                        ]
