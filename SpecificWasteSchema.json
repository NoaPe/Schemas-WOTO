{
    "groups": {
        "basic_informations": {
            "render": "one-line",
            
            "datas": {
                "depollution_id": {
                    "label": "Identifiant de la dépollution",
                    "type": "BelongsTo",
                    "hidden": true,
                    "required": true
                },

                "name": {
                    "type": "String",
                    "required": true,
                    "label": "Nom du déchet",
                    "description": "Nom que vous trouvez pertinent pour désigner le déchet.",
                    "fillable": true
                },

                "volume": {
                    "type": "Float",
                    "required": true,
                    "label": "Volume de déchet",
                    "description": "Volume du déchet en littre que vous avez ramassé.",
                    "fillable": true
                },

                "description": {
                    "type": "Text",
                    "required": false,
                    "label": "Description",
                    "description": "Description du déchet.",
                    "fillable": true
                }
            }
        },

        "pickup_informations": {
            "render": "one-line",
            
            "datas": {
                "estimation_method": {
                    "type": "Select",
                    "required": true,
                    "label": "Méthode d'estimation du volume",
                    "settings": {
                        "render": "radio",
                        "options": [
                            "A l’œil",
                            "Avec des sacs de volume connu",
                            "Avec un instrument de mesure plus précis (ex: contenant gradué)"
                        ]
                    },
                    "fillable": true
                },

                "origin": {
                    "type": "MultipleSelect",
                    "required": false,
                    "label": "Provenances principales du déchet",
                    "settings": {
                        "render": "checkbox",
                        "options": [
                            "Abandonné au sol sur le lieu",
                            "De la mer",
                            "Crue de rivière",
                            "Forêt",
                            "Autre provenance"
                        ]
                    },
                    "fillable": true
                },

                "comment": {
                    "type": "Text",
                    "required": false,
                    "label": "Commentaire",
                    "description": "Tout autre commentaire que vous trouverez pertinent sur le déchet.",
                    "fillable": true
                }
            }
        },

        "sizing": {
            "render": "one-line",
            
            "datas": {
                "poids": {
                    "type": "Float",
                    "required": false,
                    "label": "Poids",
                    "description": "Poids total de ce déchet en kilogramme (Information non obligatoire).",
                    "fillable": true
                },

                "number": {
                    "type": "Integer",
                    "required": false,
                    "label": "Nombre de déchets",
                    "description": "Nombre total de ce déchet ramassé (Information non obligatoire).",
                    "fillable": true
                }
            }
        }
    }
}